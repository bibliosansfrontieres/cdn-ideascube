#!/bin/bash

IF=$1
STATUS=$2
PROC=`pgrep kawax`

if [[ "$IF" == eth* || "$IF" == "wlan1" ]] && [ -z "$PROC"  ]
then
    case "$STATUS" in
        up)
			/usr/local/bin/kawax update_catalogs && /usr/local/bin/kawax extract_urls >> /var/log/kawax.log 2>&1
			/usr/local/bin/kawax rsync_kiwix >> /var/log/kawax.log 2>&1
			/usr/local/bin/kawax wget_other >> /var/log/kawax.log 2>&1
        ;;
        *)
            exit 0;
        ;;
    esac
fi
